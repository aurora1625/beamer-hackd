% TITLE PAGE
\defbeamertemplate*{title page}{titlepage}
{
  \thispagestyle{empty}

%  \begin{picture}(0,0)(0,0)
%    \put(-29,-171){\includegraphics[width=1.01\paperwidth]{images/layout-1.pdf}}
%  \end{picture}

  \begin{picture}(0,0)(0,0)
    \put(10,30){
      \begin{minipage}{0.90\linewidth}
      \centering{\LARGE\bfseries\sffamily\color{hackdblack} \inserttitle\par}
      %\centering{\large\color{hackdlightgrey} \insertsubtitle\par}
      \end{minipage}
    }
  \end{picture}
  \begin{picture}(0,0)(0,0)
    \put(10,0){
      \begin{minipage}{0.90\linewidth}
      \centering{\large\color{hackdlightgrey} \insertsubtitle\par}
      \end{minipage}
    }
  \end{picture}
  \begin{picture}(0,0)(0,0)
    \put(10,-95){
      \begin{minipage}{0.90\linewidth}
      \centering{\large\bfseries\sffamily\color{hackdblack} \insertauthor\par}
      \end{minipage}
    }
  \end{picture}
  \begin{picture}(0,0)(0,0)
    \put(10,-125){
      \begin{minipage}{0.90\linewidth}
      \centering{\color{hackdlightgrey} \insertinstitute\par}
      \end{minipage}
    }
  \end{picture}

}

% HEADER
\defbeamertemplate*{headline}{hackd}%
{
  \begin{beamercolorbox}[wd=\paperwidth,leftskip=1em,sep=0.6em]{headerline title}
    \hspace{0px}
    \begin{minipage}{\beamer@hackd@menuwidth}
      \begin{flushright}
        \insertsectionnavigationhorizontal{\beamer@hackd@menuwidth}{}{}
      \end{flushright}
    \end{minipage}

  \end{beamercolorbox}
  \begin{beamercolorbox}[wd=\paperwidth,sep=1px]{headerline border}
    \vspace{1px}
  \end{beamercolorbox}
}

% FOOTER
\defbeamertemplate*{footline}{hackd}
{
%\leavevmode%
  \begin{beamercolorbox}[wd=\paperwidth,leftskip=1em,sep=0.2em]{footerline}
    \insertshorttitle\;--\;\insertshortauthor \hfill %
    \ifx\beamer@hackd@numbering\beamer@hackd@value@false\relax\else
        \insertframenumber/\inserttotalframenumber\;--\; %
    \fi

  \end{beamercolorbox}
}


