% https://github.com/gliss/beamer-hackd.git

\definecolor{hackdblack}{RGB}{0,0,0}
\definecolor{hackdwhite}{RGB}{255,255,255}
\definecolor{hackdlightgrey}{RGB}{162,162,162}
\definecolor{hackdlightergrey}{RGB}{230,230,230}
\definecolor{hackddarkgrey}{RGB}{80,83,84}
\definecolor{hackdred}{RGB}{229,34,34}

%\setbeamerfont{<bleh>}{family=, size=, shape=, series=}

% fonts
\setbeamerfont{sans}{series=\bfseries, family=\sffamily}
\setbeamerfont{title}{parent=sans}
\setbeamerfont{subtitle}{parent=sans}
\setbeamerfont{frametitle}{parent=sans}
\setbeamerfont{block title}{parent=sans}
\setbeamerfont{headline}{parent=sans}
%\setbeamerfont{sectionframe title}{parent=sans}

\setbeamercolor{frametitle}{bg=hackdlightergrey,fg=hackdred}

\setbeamercolor{title}{fg=hackdblack}
\setbeamercolor{titlepage}{bg=hackdlightgrey, fg=hackdblack}
\setbeamercolor{titlepage main}{bg=hackdblack, fg=hackddarkgrey}

\setbeamercolor{headerline title}{fg=hackdblack,bg=hackdblack}
\setbeamercolor{headerline border}{bg=hackdred}

\setbeamercolor{footerline topborder}{bg=hackdred}
\setbeamercolor{footerline}{bg=hackddarkgrey,fg=hackdwhite}

\setbeamercolor{section in head/foot}{fg=hackdwhite}
\setbeamertemplate{section in head/foot shaded}[default][50]
\setbeamerfont{section in head/foot}{size=\tiny, shape=\bfseries}


